@page
@model Rekordpool.Pages.Pool.IndexModel
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Pool";
}

<h1>Pool</h1>

<p>
    <a asp-page="Create">Add Track</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Track[0].ArtistName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Track[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Track[0].AddedBy)
            </th>
            <!-- <th>
                @Html.DisplayNameFor(model => model.Track[0].Link)
            </th> -->
            <th>
                <!-- for Details/Edit/Delete -->
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Track) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtistName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedBy)
                </td>
                <!-- <td>
                    <a href="@Html.DisplayFor(modelItem => item.Link)" target="_blank">Link</a>
                </td> -->
                <td>
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
                    @if (SignInManager.IsSignedIn(User) && User.Identity.Name == item.AddedBy)
                    {
                        <text> | </text>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                        <text> | </text>
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    }
                </td>
                <td>
                    <iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/770283019&color=%23ff5500&auto_play=false&hide_related=true&show_comments=false&show_user=false&show_reposts=false&show_teaser=false">
                    </iframe>

                    <div style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;">
                        <a href="https://soundcloud.com/grlgang" title="GRL GANG" target="_blank" style="color: #cccccc; text-decoration: none;">
                            GRL GANG
                        </a> Â· 
                        <a href="https://soundcloud.com/grlgang/jinx-make-you-mine" title="Jinx - Make You Mine" target="_blank" style="color: #cccccc; text-decoration: none;">
                            Jinx - Make You Mine
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
